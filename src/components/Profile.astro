---
    const {imgSrc, name = "Name", job = "Job", phone = "315 333 3333", skill1 = "Yep", skill2 = "Yep", skill3 = "Yep", skill4 = "Yep"} = Astro.props;
---

<div class="m-2 flex justify-center flex-col rounded-md border border-gray-800 w-60 h-72 gap-5">
    <div class="flex justify-around items-center">
        <img src={imgSrc} draggable="false" class="rounded-full w-20 h-20" alt="">
        <ul class="text-sm">
            <li>
                <p>{name}</p>
            </li>
            <li>
                <p>{job}</p>
            </li>
            <li>
               <p>{phone}</p>
            </li>
        </ul>
    </div>
    <div class="flex justify-start mx-5">
        <ul class="flex flex-col items-center w-full gap-1">
            <li class="border-gray-400 rounded-md border w-full">
                <p class="px-2 py-1">{skill1}</p>
            </li>
            <li class="border-gray-400 rounded-md border w-full">
                <p class="px-2 py-1">{skill2}</p>
            </li>
            <li class="border-gray-400 rounded-md border w-full">
                <p class="px-2 py-1">{skill3}</p>
            </li>
            <li class="border-gray-400 rounded-md border w-full">
                <p class="px-2 py-1">{skill4}</p>
            </li>
        </ul>
    </div>
</div>